{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Stack for testing Object Encryptor Library",
    "Resources": {
        "ObjectEncryptorUser": {
            "Type": "AWS::IAM::User",
            "DeletionPolicy": "Delete",
            "Properties": {
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "Owner",
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Sid": "UseKMSKeys",
                                    "Action": [
                                        "kms:Encrypt",
                                        "kms:Decrypt",
                                        "kms:ReEncrypt*",
                                        "kms:GenerateDataKey*",
                                        "kms:DescribeKey"
                                    ],
                                    "Resource": [
                                        {
                                            "Fn::GetAtt": ["ObjectEncryptorKMSKey", "Arn"]
                                        }
                                    ],
                                    "Effect": "Allow"
                                }
                            ]
                        }
                    }
                ]
            },
            "DependsOn": [
                "ObjectEncryptorKMSKey"
            ]
        },
        "ObjectEncryptorKMSKey": {
            "Type": "AWS::KMS::Key",
            "Properties": {
                "Description" : "Object Encryptor Test Key",
                "KeyPolicy": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "Enable IAM User Permissions",
                            "Effect": "Allow",
                            "Principal": {
                                "AWS": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:iam::",
                                            {
                                                "Ref": "AWS::AccountId"
                                            },
                                            ":root"
                                        ]
                                    ]
                                }
                            },
                            "Action": "kms:*",
                            "Resource": "*"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "KeboolaStack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        }
    },
    "Outputs": {
        "Region": {
            "Value": {
                "Ref": "AWS::Region"
            }
        },
        "KeyId": {
            "Value": {
                "Ref": "ObjectEncryptorKMSKey"
            }
        }
    }
}
